---
import Layout from '../layouts/Layout.astro';
import { getSession } from 'auth-astro/server';
const session = await getSession(Astro.request);

if(session) {
  return Astro.redirect("/profile")
}
---

<Layout title="Plane Images - Login">
  <main>
    <div class="login-container">
      <h1>Welcome to Plane Images!</h1>
      <div class="button-group">
         <p>Sign in with GitHub to explore our collection.</p>
         <button id="login" class="login-button github-button">
             <svg class="github-icon" viewBox="0 0 16 16" version="1.1" width="16" height="16" aria-hidden="true"><path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38C13.71 14.53 16 11.54 16 8c0-4.42-3.58-8-8-8z"></path></svg>
             Login with GitHub
         </button>
      </div>
    </div>
  </main>


  <script>
    const auth_module = await import("auth-astro/client");
    const {signIn} = auth_module;
    (document.querySelector("#login")! as HTMLElement).onclick = () => signIn("github");
  </script>
</Layout>


<style>
  :root {
    --primary-color: #007bff; 
    --secondary-color: #6c757d; 
    --github-color: #333; 
    --background-light: #f8f9fa; 
    --text-dark: #343a40; 
    --border-light: #dee2e6; 
    --shadow-light: rgba(0, 0, 0, 0.1); 
  }

  body {
    font-family: 'Inter', 'Helvetica Neue', Arial, sans-serif; 
    background-color: var(--background-light);
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh; 
    margin: 0;
    color: var(--text-dark);
    line-height: 1.6;
  }

  main {
    width: 100%;
    max-width: 400px; 
    padding: 20px;
    box-sizing: border-box; 
  }

  .login-container {
    background-color: white;
    padding: 40px;
    border-radius: 8px;
    box-shadow: 0 4px 12px var(--shadow-light);
    text-align: center;
    border: 1px solid var(--border-light);
  }

  .login-container h1 {
    font-size: 2em;
    margin-bottom: 15px;
    color: var(--primary-color);
  }

  .login-container p {
    font-size: 1.1em;
    margin-bottom: 30px;
    color: var(--secondary-color);
  }

  .button-group {
    display: flex;
    flex-direction: column; 
    gap: 15px; 
  }

  .login-button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 12px 25px;
    font-size: 1.1em;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease;
    text-decoration: none; 
  }

  .login-button:hover {
    transform: translateY(-2px); 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .github-button {
    background-color: var(--github-color);
    color: white;
  }

  .github-button:hover {
    background-color: #24292e; 
  }

  .github-icon {
    margin-right: 10px;
    fill: white; 
    width: 20px; 
    height: 20px;
  }

  .logout-button {
    background-color: var(--secondary-color);
    color: white;
  }

  .logout-button:hover {
    background-color: #5a6268; 
  }

  
  @media (max-width: 600px) {
    .login-container {
      margin: 20px;
      padding: 30px 20px;
    }

    .login-container h1 {
      font-size: 1.8em;
    }

    .login-container p {
      font-size: 1em;
    }
  }
</style>